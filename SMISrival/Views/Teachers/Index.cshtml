<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Teachers List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Teachers" class="btn btn-info form-control text-white">
            Add New Teacher
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Subject</th>
                    <th>TeacherCode</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/teacherList.js"></script>
}

@section Styles{
    <link rel="stylesheet" href="~/css/keyframe.css" />
}